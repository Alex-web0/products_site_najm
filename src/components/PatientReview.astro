---
import Icon from "astro-icon";
interface Props {
  name: string;
  stars: number;
  image_link: string;
}

const { name, image_link, stars } = Astro.props;
---

<div
  class="flex flex-col bg-gradient-to-tr from-white via-blue-50/80 to-blue-50/30 px-6 py-3 m-1 hover:shadow-lg transition-all rounded-xl hover:scale-[102%]"
>
  <img src="/avatar.png" alt="" class="mb-4" width="86" />

  <div class="flex flex-row justify-between mb-2">
    <div class="text-xl">{name}</div>
    <div class="text-xl font-semibold flex flex-row align-baseline">
      <div class="self-center mx-1">{stars.toFixed(2)}</div>
      <Icon name="mdi:star" class="text-yellow-500 w-6 h-6 self-center" />
    </div>
  </div>

  <p>
    <slot />
  </p>
</div>
